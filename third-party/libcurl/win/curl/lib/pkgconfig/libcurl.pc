exec_prefix=${prefix}
libdir=${prefix}/lib
includedir=${prefix}/include
supported_protocols="DICT FILE FTP FTPS GOPHER HTTP HTTPS IMAP IMAPS LDAP MQTT POP3 POP3S RTSP SMB SMBS SMTP SMTPS TELNET TFTP"
supported_features="SSL IPv6 libz AsynchDNS SSPI alt-svc SPNEGO Kerberos NTLM"

Name: libcurl
URL: https://curl.se/
Description: Library to transfer files with ftp, http, etc.
Version: 7.74.0-DEV
Libs: -L"${libdir}" -lcurl 
Libs.private:  -lwldap32 -lwinmm -lws2_32 -ladvapi32 -lcrypt32 -lzlib
Cflags: -I"${includedir}" 
